extends Area2D

@onready var player = get_tree().get_first_node_in_group('player')

signal remove_from_array(object)

var level = 1
var hp = 1
var speed = 1000
var damage = 5
var knock_back = 100
var attack_size = 1.0

var target = Vector2.ZERO
var angle = Vector2.ZERO

func _ready():
	angle = position.direction_to(target)
	
	var random_offset = deg_to_rad(randf() * 10 - 10)
	angle = angle.rotated(random_offset)
	
	# rotation = angle.angle() + deg_to_rad(135)
	match level:
		0:
			hp = 0
			speed = 0
			damage = 0
			knock_back = 0
			attack_size = 0
		1:
			hp = 1
			speed = 800
			damage = 2
			knock_back = 100
			attack_size = 1.0
			
		2:
			hp = 1
			speed = 1000
			damage = 3
			knock_back = 120
			attack_size = 1.0
			
		3:
			hp = 2
			speed = 1200
			damage = 6
			knock_back = 140
			attack_size = 1.0
			
		4:
			hp = 3
			speed = 1400
			damage = 9
			knock_back = 160
			attack_size = 1.0
			
		5:
			hp = 5
			speed = 1600
			damage = 16
			knock_back = 200
			attack_size = 1.0

func _physics_process(delta):
	position += angle * speed * delta
	
func enemy_hit(charge = 1):
	hp -= charge
	if hp <= 0:
		emit_signal('remove_from_array',self)
		queue_free()
		

func _on_timer_timeout():
	emit_signal('remove_from_array',self)
	queue_free()
"

