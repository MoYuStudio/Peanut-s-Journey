script/source = "# time的时间小范围随机。改变丢的位置。   你看看 和怪的碰撞 要不要写，两个画到时候再改 
# 到时候添加就随机丢，不用瞄准了

extends Area2D

@onready var boss = get_tree().get_first_node_in_group('boss')

signal remove_from_array(object)

var level = 1
var hp = 1
var speed = 100
var damage = 5
var knock_back = 100
var attack_size = 1.0

var target = Vector2.ZERO
var angle = Vector2.ZERO

func _ready():
	angle = position.direction_to(target)
	
	var random_offset = deg_to_rad(randf() * 20 - 20)
	angle = angle.rotated(random_offset)
	
	# rotation = angle.angle() + deg_to_rad(135)
	match level:
		0:
			hp = 0
			speed = 0
			damage = 0
			knock_back = 0
			attack_size = 0
		1:
			hp = 100
			speed = 600
			damage = 80
			knock_back = 100
			attack_size = 1.0
	
	$AnimationPlayer2.play('animation')

func _physics_process(delta):
	position += angle * speed * delta
	
func enemy_hit(charge = 1):
	hp -= charge
	if hp <= 0:
		emit_signal('remove_from_array',self)
		queue_free()

func _on_timer_timeout():
	speed = 0
	$AnimationPlayer.play(\"animation\")
	await $AnimationPlayer.animation_finished
	emit_signal('remove_from_array',self)
	queue_free()
