script/source = "
extends CharacterBody2D

var movement_speed = 600
var ang_speed = 0.03

var hp = 100

var self_direction = 0

var enemy_close = []

# Attacks
@onready var bullet = preload('res://source/object/bullet.tscn')
@onready var bullet_timer = $Attack/BulletTimer
@onready var bullet_attack_timer = $Attack/BulletTimer/BulletAttackTimer
var bullet_ammo = 0
var bullet_base_ammo = 1
var bullet_level = 1
var bullet_attack_speed = 0.9

# 进程函数 ==============================================================

func _ready():
	attack()
	
func _process(_delta):
	if hp <= 0:
		queue_free()
		get_tree().change_scene_to_file('res://source/scene/menu_gameover.tscn')
	
	self_direction = 0
	velocity = Vector2.ZERO
	if Input.is_action_pressed(\"ui_up\"):
		velocity = Vector2.UP.rotated(rotation) * movement_speed
		dir()
		
	if Input.is_action_pressed(\"ui_down\"):
		velocity = Vector2.DOWN.rotated(rotation) * movement_speed/3
		dir()
		
	if Input.is_action_just_pressed(\"ui_up\") or Input.is_action_just_pressed(\"ui_down\"):
		$Body/AudioStreamPlayer.play()
		$Body/HitBox.collision.disabled = false
		
	if Input.is_action_just_released(\"ui_up\") or Input.is_action_just_pressed(\"ui_down\"):
		$Body/AudioStreamPlayer.stop()
		$Body/HitBox.collision.disabled = true
		
	$Body.rotation += ang_speed * self_direction # * delta
	#$HUD.rotation -= ang_speed * direction
	#$Attack.rotation -= ang_speed * direction
	#position += velocity # * delta
	
func _physics_process(_delta):
	$HUD/HP.value = hp
	$Body.move_and_slide()

# 自定义函数 =============================================================

func dir():
	self_direction = 0
	if Input.is_action_pressed(\"ui_left\"):
		self_direction = -1
	if Input.is_action_pressed(\"ui_right\"):
		self_direction = 1
		
func attack():
	if bullet_level > 0:
		bullet_timer.wait_time = bullet_attack_speed
		if bullet_timer.is_stopped():
			bullet_timer.start()
			
# 信号 ================================================================

# 受伤箱信号
func _on_hurt_box_hurt(damage):
	hp -= damage
	
# 子弹信号
func _on_bullet_timer_timeout():
	bullet_ammo += bullet_base_ammo
	bullet_attack_timer.start()

func _on_bullet_attack_timer_timeout():
	if bullet_ammo > 0:
		var bullet_attack = bullet.instantiate()
		bullet_attack.position = Vector2.ZERO # position
		bullet_attack.target = get_random_target()
		bullet_attack.level = bullet_level
		bullet_attack.look_at(get_random_target())
		add_child(bullet_attack)
		bullet_ammo -= 1
		if bullet_ammo > 0:
			bullet_attack_timer.start()
		else:
			bullet_attack_timer.stop()
			
func get_random_target():
	if enemy_close.size() > 0:
		return enemy_close.pick_random().global_position
	else:
		return Vector2.UP

# 敌人检测区域信号
func _on_enemy_detection_area_body_entered(body):
	if not enemy_close.has(body):
		enemy_close.append(body)

func _on_enemy_detection_area_body_exited(body):
	if enemy_close.has(body):
		enemy_close.erase(body)
"

